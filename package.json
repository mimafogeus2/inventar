{
  "name": "inventar",
  "version": "0.2.0",
  "description": "A single place to handle all of your design variables",
  "main": "dist/main/inventar.js",
  "typings": "dist/main/inventar.d.ts",
  "module": "dist/module/inventar.esm.js",
  "repository": "https://github.com/mimafogeus2/inventar",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "describe": "npm-scripts-info",
    "build": "run-s clean:build && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "dist": "rollup -c",
    "fix": "eslint --cache --fix src/**/*.ts",
    "test": "run-s build test:*",
    "test:lint": "eslint --cache src/**/*.ts",
    "test:unit": "nyc --silent ava",
    "watch": "run-s clean:build build:main && run-p \"build:main -- -w\" \"test:unit -- --watch --verbose\"",
    "cov": "run-s build test:unit cov:html && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:send": "nyc report --reporter=lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "version": "standard-version",
    "version:minor": "standard-version --release-as minor",
    "clean": "run-p clean:*",
    "clean:build": "trash build test",
    "clean:dist": "trash dist",
    "amend": "git commit --amend -a -C HEAD",
    "prepare-release": "run-s test cov:check version dist amend",
    "prepare-release:minor": "run-s test cov:check version:minor dist amend"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "dist": "Build bundled, minified code for distribution",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint and unit test the project",
    "watch": "Watch and rebuild the project on save, then rerun relevant tests",
    "cov": "Rebuild, run tests, then create and open the coverage report",
    "version": "Bump package.json version, update CHANGELOG.md, tag release",
    "prepare-release": "One-step: clean, build, test, and prep a release"
  },
  "engines": {
    "node": ">=10.16"
  },
  "dependencies": {},
  "devDependencies": {
    "@bitjson/npm-scripts-info": "^1.0.0",
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "ava": "2.2.0",
    "browser-env": "^3.3.0",
    "codecov": "^3.5.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gh-pages": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "open-cli": "^5.0.0",
    "prettier": "^1.18.2",
    "rollup": "^2.23.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-dts": "^1.4.10",
    "rollup-plugin-filesize": "^9.0.2",
    "rollup-plugin-terser": "^7.0.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "standard-version": "^8.0.1",
    "trash-cli": "^3.0.0",
    "typescript": "^4.1.2"
  },
  "ava": {
    "failFast": true,
    "files": [
      "build/main/**/*.spec.js"
    ],
    "require": [
      "./env_helpers/require-browser-env.js"
    ],
    "sources": [
      "build/main/**/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js",
      "dist/**"
    ]
  }
}
